{
    "version": "0.1.0",
    "license": "Apache-2.0",
    "main": "dist/index.js",
    "source": "src/index.ts",
    "typings": "dist/index.d.ts",
    "files": [
        "dist",
        "src"
    ],
    "engines": {
        "node": ">=10"
    },
    "scripts": {
        "start": "tsdx watch",
        "build": "tsdx build",
        "build2": "parcel build",
        "test": "tsdx test",
        "lint": "tsdx lint",
        "prepare": "tsdx build",
        "size": "size-limit",
        "analyze": "size-limit --why",
        "commit": "git-cz"
    },
    "husky": {
        "hooks": {
            "pre-commit": "tsdx lint",
            "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
        }
    },
    "prettier": {
        "printWidth": 80,
        "semi": true,
        "singleQuote": true,
        "trailingComma": "es5"
    },
    "name": "modelviewer",
    "author": "SmilingXinyi",
    "module": "dist/modelviewer.esm.js",
    "size-limit": [
        {
            "path": "dist/modelviewer.cjs.production.min.js",
            "limit": "10 KB"
        },
        {
            "path": "dist/modelviewer.esm.js",
            "limit": "10 KB"
        }
    ],
    "devDependencies": {
        "@commitlint/cz-commitlint": "^15.0.0",
        "@rollup/plugin-node-resolve": "^13.1.1",
        "@rollup/plugin-typescript": "^8.3.0",
        "commitizen": "^4.2.4",
        "inquirer": "^8.2.0",
        "parcel": "^2.0.1",
        "rollup": "^2.61.1",
        "tsdx": "^0.14.1",
        "tslib": "^2.3.1",
        "typescript": "^4.5.4"
    },
    "config": {
        "commitizen": {
            "path": "@commitlint/cz-commitlint"
        }
    },
    "dependencies": {
        "@types/three": "^0.135.0",
        "three": "^0.135.0"
    }
}
