{
    "version": "1.1.0",
    "license": "Apache-2.0",
    "main": "dist/modelviewer.js",
    "source": "src/index.ts",
    "typings": "dist/types/index.d.ts",
    "files": [
        "dist",
        "src",
        "README.md",
        "package.json"
    ],
    "engines": {
        "node": ">=10"
    },
    "scripts": {
        "start": "rollup --config scripts/rollup.config.dev.js -w",
        "build": "rollup --config scripts/rollup.config.js",
        "size": "size-limit",
        "analyze": "size-limit --why",
        "commit": "git-cz",
        "release": "rm -rf dist && npm run build && standard-version"
    },
    "husky": {
        "hooks": {
            "pre-commit": "tsdx lint",
            "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
        }
    },
    "prettier": {
        "printWidth": 80,
        "semi": true,
        "singleQuote": true,
        "trailingComma": "es5"
    },
    "name": "modelviewer",
    "author": "SmilingXinyi",
    "module": "dist/modelviewer.esm.js",
    "size-limit": [
        {
            "path": "dist/modelviewer.cjs.production.min.js",
            "limit": "10 KB"
        },
        {
            "path": "dist/modelviewer.esm.js",
            "limit": "10 KB"
        }
    ],
    "devDependencies": {
        "@rollup/plugin-html": "^0.2.4",
        "@rollup/plugin-node-resolve": "^13.1.1",
        "@rollup/plugin-typescript": "^8.3.0",
        "commitizen": "^4.2.4",
        "cz-conventional-changelog": "^3.3.0",
        "git-cz": "^4.8.0",
        "rollup": "^2.75.7",
        "rollup-plugin-serve": "^2.0.0",
        "rollup-plugin-terser": "^7.0.2",
        "standard-version": "^9.3.2",
        "tslib": "^2.3.1",
        "typescript": "^4.5.4"
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    },
    "dependencies": {
        "@types/three": "^0.135.0",
        "three": "^0.135.0"
    },
    "publishConfig": {
        "access": "public"
    }
}
